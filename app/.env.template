# Configuration PostgreSQL pour l'application Payroll
# IMPORTANT: Changez les mots de passe en production !

# Base de données principale
PAYROLL_DB_HOST=localhost
PAYROLL_DB_PORT=5432
PAYROLL_DB_NAME=payroll_db
PAYROLL_DB_USER=payroll_app
# PAYROLL_DB_PASSWORD ne doit PAS être versionné. Remplissez la valeur dans un fichier `.env` local non commité
PAYROLL_DB_PASSWORD=

# Superuser pour opérations administrateur
PAYROLL_DB_SUPERUSER=postgres
# PAYROLL_DB_SUPERUSER_PASSWORD ne doit PAS être versionné. Remplissez la valeur dans un fichier `.env` local non commité
PAYROLL_DB_SUPERUSER_PASSWORD=

# Autres configurations
APP_ENV=development
PAYROLL_FORCE_OFFLINE=0
USE_COPY=0
