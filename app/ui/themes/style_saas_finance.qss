/* ============================================================================
   Thème SaaS Finance Premium - Style Behance Desktop UI Design
   Inspiré par les meilleurs designs de dashboards financiers modernes
   Dark Mode avec accent Turquoise/Emeraude
   ============================================================================ */

/* === VARIABLES & PALETTE === 
   Background:      #1A1D1F (noir-gris profond)
   Sidebar:         #16191B (noir profond)
   Cards:           #242831 (gris foncé cards)
   Surface Alt:     #2A2F38 (gris moyen)
   Primary Green:   #1DD1A1 (turquoise/émeraude vif)
   Success:         #4ADE80 (vert chart)
   Warning:         #FBBF24 (jaune)
   Error:           #EF4444 (rouge)
   Info:            #60A5FA (bleu)
   Text Primary:    #FFFFFF (blanc)
   Text Secondary:  #9CA3AF (gris clair)
   Text Muted:      #6B7280 (gris moyen)
   Border:          #2D3139 (border subtile)
   Border Light:    #374151 (border hover)
*/

/* === BASE GLOBALE === */
* {
    font-family: "Inter", "Segoe UI", "San Francisco", -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 14px;
    letter-spacing: -0.01em;
    outline: none;
}

QWidget {
    background-color: #1A1D1F;
    color: #FFFFFF;
}

QMainWindow {
    background-color: #1A1D1F;
}

QMainWindow::separator {
    background: #2D3139;
    width: 1px;
    height: 1px;
}

QMainWindow::separator:hover {
    background: #1DD1A1;
}

/* === SIDEBAR (Panneau latéral gauche) === */
QWidget#Sidebar {
    background-color: #16191B;
    border-right: 1px solid #2D3139;
    padding: 8px;
}

QWidget#Sidebar QLabel#SidebarTitle {
    color: #FFFFFF;
    font-size: 18px;
    font-weight: 700;
    padding: 16px 12px 12px 12px;
    letter-spacing: -0.02em;
}

QWidget#Sidebar QPushButton,
QWidget#Sidebar QToolButton {
    background-color: transparent;
    color: #9CA3AF;
    border: none;
    border-radius: 10px;
    padding: 12px 16px;
    text-align: left;
    font-size: 14px;
    font-weight: 500;
    min-height: 44px;
    margin: 2px 4px;
}

QWidget#Sidebar QPushButton:hover,
QWidget#Sidebar QToolButton:hover {
    background-color: rgba(29, 209, 161, 0.1);
    color: #1DD1A1;
}

QWidget#Sidebar QPushButton:pressed,
QWidget#Sidebar QToolButton:pressed {
    background-color: rgba(29, 209, 161, 0.15);
    color: #1DD1A1;
}

QWidget#Sidebar QPushButton:checked,
QWidget#Sidebar QPushButton[active="true"],
QWidget#Sidebar QToolButton:checked {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 rgba(29, 209, 161, 0.15),
                                stop:1 rgba(29, 209, 161, 0.05));
    color: #1DD1A1;
    border-left: 3px solid #1DD1A1;
    font-weight: 600;
    padding-left: 13px;
}

QWidget#Sidebar QPushButton:disabled,
QWidget#Sidebar QToolButton:disabled {
    color: #4B5563;
    background-color: transparent;
}

/* Séparateur dans sidebar */
QWidget#Sidebar QFrame[frameShape="4"] {
    background-color: #2D3139;
    max-height: 1px;
    margin: 12px 8px;
}

/* === MENU BAR (Barre de menu supérieure) === */
QMenuBar {
    background-color: #1A1D1F;
    color: #FFFFFF;
    border-bottom: 1px solid #2D3139;
    padding: 6px 12px;
    spacing: 8px;
}

QMenuBar::item {
    background: transparent;
    padding: 10px 18px;
    border-radius: 8px;
    font-weight: 500;
}

QMenuBar::item:selected {
    background-color: rgba(29, 209, 161, 0.12);
    color: #1DD1A1;
}

QMenuBar::item:pressed {
    background-color: rgba(29, 209, 161, 0.2);
}

QMenu {
    background-color: #242831;
    color: #FFFFFF;
    border: 1px solid #374151;
    border-radius: 12px;
    padding: 8px;
}

QMenu::item {
    padding: 10px 28px 10px 18px;
    border-radius: 8px;
    min-height: 32px;
    margin: 2px 4px;
}

QMenu::item:selected {
    background-color: rgba(29, 209, 161, 0.15);
    color: #1DD1A1;
}

QMenu::item:disabled {
    color: #6B7280;
}

QMenu::separator {
    height: 1px;
    background: #374151;
    margin: 8px 12px;
}

QMenu::indicator {
    width: 18px;
    height: 18px;
    margin-left: 6px;
}

/* === BOUTONS === */
QPushButton {
    background-color: #242831;
    color: #FFFFFF;
    border: 1px solid #374151;
    border-radius: 10px;
    padding: 10px 20px;
    min-height: 40px;
    font-weight: 500;
    font-size: 14px;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #1DD1A1,
                                stop:1 #16B086);
    color: #FFFFFF;
    border-color: #1DD1A1;
}

QPushButton:pressed {
    background-color: #16B086;
    color: #FFFFFF;
    border-color: #16B086;
}

QPushButton:disabled {
    background-color: rgba(36, 40, 49, 0.5);
    color: #6B7280;
    border-color: #374151;
}

QPushButton:default,
QPushButton[primary="true"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #1DD1A1,
                                stop:1 #16B086);
    color: #FFFFFF;
    border: none;
    font-weight: 600;
}

QPushButton:default:hover,
QPushButton[primary="true"]:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #26E0AD,
                                stop:1 #1DD1A1);
}

QPushButton[secondary="true"] {
    background-color: transparent;
    border: 1px solid #374151;
    color: #9CA3AF;
}

QPushButton[secondary="true"]:hover {
    background-color: #242831;
    border-color: #1DD1A1;
    color: #1DD1A1;
}

/* === CARDS / FRAMES (Style Behance) === */
QFrame#KPI,
QFrame#Card,
QWidget#Card,
QFrame#SummaryCard {
    background-color: #242831;
    border: none;  /* SUPPRIMÉ : pas de bordure mécanique */
    border-radius: 16px;
    padding: 16px;
    /* Séparateur visuel créé par l'espacement et l'ombre portée */
    /* margin supprimé - géré par les layouts */
    /* min-width, max-width, min-height, max-height supprimés - gérés par le code Python */
}

QFrame#KPI:hover,
QFrame#Card:hover,
QFrame#HomeCard:hover,
QFrame#TransactionsCard:hover,
QFrame#ReportsCard:hover,
QFrame#SchedulerCard:hover,
QFrame#RetirementCard:hover,
QFrame#CreditCard:hover,
QFrame#InvestmentCard:hover,
QFrame#BusinessCard:hover,
QFrame#BudgetCard:hover {
    /* Effet de survol subtil sans bordure */
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #2F3442,
                                stop:1 #262A35);
    /* Légère élévation visuelle au survol */
}

QFrame#KPI QLabel,
QWidget#Card QLabel {
    color: #FFFFFF;
    background: transparent;
    border: none;
}

QFrame#KPI QLabel#Title,
QWidget#Card QLabel#Title {
    font-size: 11px;
    font-weight: 700;
    color: #9CA3AF;
    text-transform: uppercase;
    letter-spacing: 0.08em;
}

QFrame#KPI QLabel#Value,
QWidget#Card QLabel#Value {
    /* SUPPRIMÉ font-size fixe - géré par auto-fit en Python */
    font-weight: 700;
    color: #FFFFFF;
    letter-spacing: -0.02em;
    padding: 4px 0;
    /* SUPPRIMÉ min-width - géré par auto-fit */
}

QFrame#KPI QLabel#Subtitle,
QFrame#KPI QLabel#Delta,
QWidget#Card QLabel#Subtitle {
    font-size: 12px;
    color: #6B7280;
    font-weight: 500;
}

QFrame#KPI QLabel#Change {
    font-size: 13px;
    font-weight: 600;
    padding: 4px 10px;
    border-radius: 6px;
}

/* Progress bars dans les KPI cards */
QFrame#KPI QProgressBar {
    background-color: #1F2329;
    border: none;
    border-radius: 4px;
    height: 8px;
    margin: 6px 0;
}

QFrame#KPI QProgressBar::chunk {
    border-radius: 3px;
}

/* === TAGS / BADGES === */
QLabel#TagOK,
QLabel#TagSuccess {
    background-color: rgba(74, 222, 128, 0.15);
    color: #4ADE80;
    border: 1px solid rgba(74, 222, 128, 0.3);
    border-radius: 8px;
    padding: 6px 14px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

QLabel#TagWarning {
    background-color: rgba(251, 191, 36, 0.15);
    color: #FBBF24;
    border: 1px solid rgba(251, 191, 36, 0.3);
    border-radius: 8px;
    padding: 6px 14px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

QLabel#TagError,
QLabel#TagDanger {
    background-color: rgba(239, 68, 68, 0.15);
    color: #EF4444;
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 8px;
    padding: 6px 14px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

QLabel#TagInfo {
    background-color: rgba(96, 165, 250, 0.15);
    color: #60A5FA;
    border: 1px solid rgba(96, 165, 250, 0.3);
    border-radius: 8px;
    padding: 6px 14px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

/* === TABLEAUX === */
QTableView,
QTableWidget {
    background-color: #242831;
    alternate-background-color: #1F2329;
    gridline-color: #2D3139;
    border: 1px solid #2D3139;
    border-radius: 12px;
    selection-background-color: rgba(29, 209, 161, 0.2);
    selection-color: #FFFFFF;
}

QTableView::item,
QTableWidget::item {
    padding: 12px 16px;
    color: #FFFFFF;
    border: none;
}

QTableView::item:selected,
QTableWidget::item:selected {
    background-color: rgba(29, 209, 161, 0.2);
    border-left: 3px solid #1DD1A1;
}

QTableView::item:hover,
QTableWidget::item:hover {
    background-color: rgba(29, 209, 161, 0.08);
}

QHeaderView::section {
    background-color: #1F2329;
    color: #9CA3AF;
    padding: 14px 16px;
    border: none;
    border-bottom: 2px solid #2D3139;
    border-right: 1px solid #2D3139;
    font-weight: 700;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

QHeaderView::section:horizontal {
    border-right: 1px solid #2D3139;
}

QHeaderView::section:hover {
    background-color: #242831;
    color: #1DD1A1;
}

/* Valeurs négatives en rouge */
QTableView::item[negative="true"],
QTableWidget::item[negative="true"] {
    color: #EF4444;
    font-weight: 600;
}

/* Valeurs positives en vert */
QTableView::item[positive="true"],
QTableWidget::item[positive="true"] {
    color: #4ADE80;
    font-weight: 600;
}

/* === CHAMPS DE SAISIE === */
QLineEdit,
QTextEdit,
QPlainTextEdit {
    background-color: #242831;
    color: #FFFFFF;
    border: 1px solid #374151;
    border-radius: 10px;
    padding: 10px 14px;
    selection-background-color: rgba(29, 209, 161, 0.3);
    selection-color: #FFFFFF;
}

QLineEdit:focus,
QTextEdit:focus,
QPlainTextEdit:focus {
    border: 2px solid #1DD1A1;
    background-color: #2A2F38;
    padding: 9px 13px;
}

QLineEdit:disabled,
QTextEdit:disabled,
QPlainTextEdit:disabled {
    background-color: rgba(36, 40, 49, 0.5);
    color: #6B7280;
    border-color: #374151;
}

QLineEdit::placeholder,
QTextEdit::placeholder {
    color: #6B7280;
}

/* === COMBOBOX === */
QComboBox {
    background-color: #242831;
    color: #FFFFFF;
    border: 1px solid #374151;
    border-radius: 10px;
    padding: 10px 14px;
    min-height: 38px;
}

QComboBox:hover {
    border-color: #1DD1A1;
    background-color: #2A2F38;
}

QComboBox:focus {
    border: 2px solid #1DD1A1;
    padding: 9px 13px;
}

QComboBox::drop-down {
    border: none;
    width: 32px;
    padding-right: 8px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 7px solid #9CA3AF;
    margin-right: 6px;
}

QComboBox::down-arrow:hover {
    border-top-color: #1DD1A1;
}

QComboBox QAbstractItemView {
    background-color: #242831;
    color: #FFFFFF;
    border: 1px solid #374151;
    border-radius: 12px;
    padding: 6px;
    selection-background-color: rgba(29, 209, 161, 0.2);
    selection-color: #FFFFFF;
}

QComboBox QAbstractItemView::item {
    min-height: 38px;
    padding: 8px 14px;
    border-radius: 8px;
    margin: 2px;
}

QComboBox QAbstractItemView::item:selected {
    background-color: rgba(29, 209, 161, 0.2);
    color: #1DD1A1;
}

QComboBox QAbstractItemView::item:hover {
    background-color: rgba(29, 209, 161, 0.1);
}

/* === SPINBOX === */
QSpinBox,
QDoubleSpinBox {
    background-color: #242831;
    color: #FFFFFF;
    border: 1px solid #374151;
    border-radius: 10px;
    padding: 10px 14px;
    min-height: 38px;
}

QSpinBox:focus,
QDoubleSpinBox:focus {
    border: 2px solid #1DD1A1;
    padding: 9px 13px;
}

QSpinBox::up-button,
QDoubleSpinBox::up-button,
QSpinBox::down-button,
QDoubleSpinBox::down-button {
    background-color: #2A2F38;
    border: none;
    border-radius: 6px;
    width: 22px;
    margin: 2px;
}

QSpinBox::up-button:hover,
QDoubleSpinBox::up-button:hover,
QSpinBox::down-button:hover,
QDoubleSpinBox::down-button:hover {
    background-color: #374151;
}

QSpinBox::up-arrow,
QDoubleSpinBox::up-arrow {
    image: none;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-bottom: 6px solid #9CA3AF;
}

QSpinBox::down-arrow,
QDoubleSpinBox::down-arrow {
    image: none;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 6px solid #9CA3AF;
}

QSpinBox::up-arrow:hover,
QDoubleSpinBox::up-arrow:hover,
QSpinBox::down-arrow:hover,
QDoubleSpinBox::down-arrow:hover {
    border-bottom-color: #1DD1A1;
    border-top-color: #1DD1A1;
}

/* === SCROLLBAR === */
QScrollBar:vertical {
    background-color: #1A1D1F;
    width: 14px;
    border-radius: 7px;
    margin: 2px;
}

QScrollBar::handle:vertical {
    background-color: #374151;
    border-radius: 7px;
    min-height: 40px;
}

QScrollBar::handle:vertical:hover {
    background-color: #4B5563;
}

QScrollBar::handle:vertical:pressed {
    background-color: #1DD1A1;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #1A1D1F;
    height: 14px;
    border-radius: 7px;
    margin: 2px;
}

QScrollBar::handle:horizontal {
    background-color: #374151;
    border-radius: 7px;
    min-width: 40px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #4B5563;
}

QScrollBar::handle:horizontal:pressed {
    background-color: #1DD1A1;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* === PROGRESS BAR === */
QProgressBar {
    background-color: #242831;
    border: 1px solid #374151;
    border-radius: 10px;
    text-align: center;
    color: #FFFFFF;
    font-weight: 600;
    height: 24px;
}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 #1DD1A1,
                                stop:1 #4ADE80);
    border-radius: 9px;
}

/* === CHECKBOX & RADIO === */
QCheckBox,
QRadioButton {
    color: #FFFFFF;
    spacing: 10px;
    font-weight: 500;
}

QCheckBox::indicator,
QRadioButton::indicator {
    width: 22px;
    height: 22px;
    border: 2px solid #374151;
    background-color: #242831;
    border-radius: 6px;
}

QRadioButton::indicator {
    border-radius: 11px;
}

QCheckBox::indicator:checked,
QRadioButton::indicator:checked {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                                stop:0 #1DD1A1,
                                stop:1 #16B086);
    border-color: #1DD1A1;
}

QCheckBox::indicator:hover,
QRadioButton::indicator:hover {
    border-color: #1DD1A1;
    background-color: #2A2F38;
}

QCheckBox::indicator:disabled,
QRadioButton::indicator:disabled {
    background-color: rgba(36, 40, 49, 0.5);
    border-color: #374151;
}

/* === SLIDER === */
QSlider::groove:horizontal {
    height: 8px;
    background: #242831;
    border: 1px solid #374151;
    border-radius: 4px;
}

QSlider::handle:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                                stop:0 #1DD1A1,
                                stop:1 #16B086);
    width: 20px;
    height: 20px;
    border-radius: 10px;
    margin: -7px 0;
    border: 2px solid #FFFFFF;
}

QSlider::handle:horizontal:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                                stop:0 #26E0AD,
                                stop:1 #1DD1A1);
}

QSlider::sub-page:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 #1DD1A1,
                                stop:1 #4ADE80);
    border-radius: 4px;
}

/* === TAB WIDGET === */
QTabWidget::pane {
    background-color: #242831;
    border: 1px solid #2D3139;
    border-radius: 12px;
    padding: 6px;
    top: -1px;
}

QTabBar::tab {
    background-color: transparent;
    color: #9CA3AF;
    padding: 12px 24px;
    border: none;
    border-bottom: 3px solid transparent;
    font-weight: 600;
    min-width: 100px;
    margin-right: 4px;
}

QTabBar::tab:selected {
    color: #1DD1A1;
    border-bottom: 3px solid #1DD1A1;
}

QTabBar::tab:hover:!selected {
    color: #FFFFFF;
    background-color: rgba(29, 209, 161, 0.05);
    border-radius: 8px 8px 0 0;
}

/* === DOCK WIDGET === */
QDockWidget {
    background-color: #1A1D1F;
    color: #FFFFFF;
    titlebar-close-icon: none;
    titlebar-normal-icon: none;
    border: 1px solid #2D3139;
}

QDockWidget::title {
    background-color: #242831;
    padding: 12px 16px;
    border: none;
    border-bottom: 1px solid #2D3139;
    font-weight: 700;
    font-size: 15px;
    text-align: left;
}

QDockWidget::close-button,
QDockWidget::float-button {
    background-color: transparent;
    border: none;
    padding: 6px;
    border-radius: 6px;
}

QDockWidget::close-button:hover,
QDockWidget::float-button:hover {
    background-color: rgba(29, 209, 161, 0.15);
}

/* === STATUS BAR === */
QStatusBar {
    background-color: #1A1D1F;
    color: #9CA3AF;
    border-top: 1px solid #2D3139;
    padding: 6px 12px;
    font-size: 13px;
}

QStatusBar::item {
    border: none;
}

/* === TOOLTIPS === */
QToolTip {
    background-color: #242831;
    color: #FFFFFF;
    border: 1px solid #374151;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 13px;
}

/* === DIALOG === */
QDialog {
    background-color: #1A1D1F;
    border: 1px solid #374151;
    border-radius: 16px;
}

QDialog QLabel {
    color: #FFFFFF;
}

/* === LIST WIDGET === */
QListWidget {
    background-color: #242831;
    color: #FFFFFF;
    border: 1px solid #2D3139;
    border-radius: 12px;
    padding: 6px;
}

QListWidget::item {
    padding: 12px 16px;
    border-radius: 8px;
    margin: 2px;
}

QListWidget::item:selected {
    background-color: rgba(29, 209, 161, 0.2);
    color: #FFFFFF;
    border-left: 3px solid #1DD1A1;
}

QListWidget::item:hover {
    background-color: rgba(29, 209, 161, 0.1);
}

/* === LIST WIDGET MODE ICON (Dashboard KPI Grid) === */
QListWidget[viewMode="1"] {
    background-color: transparent;
    border: none;
    padding: 8px;
}

QListWidget[viewMode="1"]::item {
    background-color: transparent;
    border: none;
    padding: 0;
    margin: 10px;
}

/* === TREE WIDGET === */
QTreeView,
QTreeWidget {
    background-color: #242831;
    color: #FFFFFF;
    border: 1px solid #2D3139;
    border-radius: 12px;
    alternate-background-color: #1F2329;
    selection-background-color: rgba(29, 209, 161, 0.2);
}

QTreeView::item,
QTreeWidget::item {
    padding: 8px;
    border-radius: 6px;
}

QTreeView::item:selected,
QTreeWidget::item:selected {
    background-color: rgba(29, 209, 161, 0.2);
    color: #FFFFFF;
}

QTreeView::item:hover,
QTreeWidget::item:hover {
    background-color: rgba(29, 209, 161, 0.08);
}

QTreeView::branch:selected,
QTreeWidget::branch:selected {
    background-color: rgba(29, 209, 161, 0.2);
}

/* === FOCUS RING === */
*:focus {
    outline: 2px solid #1DD1A1;
    outline-offset: 2px;
}

/* === DIALOGS (Import, Config, etc.) === */
QDialog {
    background-color: #1A1D1F;
    color: #FFFFFF;
}

QDialog QLabel[heading="true"] {
    font-size: 16px;
